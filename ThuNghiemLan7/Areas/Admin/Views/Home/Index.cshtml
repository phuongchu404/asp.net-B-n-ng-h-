@model IEnumerable<ThuNghiemLan7.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách 5 sản phẩm bán chạy nhất</h1>
        </div>
    </div>

    <table class="table table-striped table-bordered" id="myTable" style="margin-top:15px;">
        <thead style="background-color:lightskyblue;">
            <tr>
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Tên thương hiệu
                </th>
                <th>
                    Tóm tắt
                </th>
                <th>
                    Ảnh
                </th>
                <th>
                    Số lượng đã bán
                </th>
                <th>
                    Giá bán
                </th>
            </tr>
        </thead>

        @{
            int count = 0;
            foreach (var item in Model)
            {

                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.MaSanPham)</strong>
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThuongHieu1.TenThuongHieu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TomTat)
                    </td>
                    <td>
                        @{
                            string ImagePath = "~/Content/fileimage/" + item.Anh;
                        }
                        <img src="@Url.Content(ImagePath)" width="60" height="80" class="img-thumbnail" />
                        @Html.DisplayFor(modelItem => item.Anh)
                    </td>
                    <td>
                        @(item.SoLuongNhap-item.SoLuongTonKho)
                    </td>
                    <td>
                        @String.Format("{0:#,#.#}", item.GiaBan)<span> đ</span>
                    </td>

                </tr>
                count++;
                if (count == 5)
                {
                    break;
                }
            }
        }
    </table>
    
</div>

