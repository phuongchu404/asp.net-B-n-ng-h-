@model ThuNghiemLan7.Models.NhanVien
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>LOGIN FOR ADMINSITE of SHOP WATCHS</title>
    <link href="~/Areas/Admin/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/admin.css" rel="stylesheet">

    <link href="~/Areas/Admin/Contentfont-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Xin mời đăng nhập</h3>
                    </div>
                    <div class="panel-body">
                        <p style="color:red">@ViewBag.ErrorMessage</p>
                        <form role="form" action="~/Admin/Login/Index" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Tên đăng nhập" name="TenDangNhap" value="@Model.TenDangNhap" autofocus>
                                </div>
                                @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger", @style = "color: red" })
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="MatKhau" type="password" value="@Model.MatKhau">
                                </div>
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger", @style = "color: red" })
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Login" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/Content/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src=".~/Areas/Admin/Content/metisMenu/metisMenu.min.js"></script>
    <script src="~/Areas/Admin/Content/js/admin.js"></script>
</body>
</html>



