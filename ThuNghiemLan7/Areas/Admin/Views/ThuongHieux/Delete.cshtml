@model ThuNghiemLan7.Models.ThuongHieu

@{
    ViewBag.Title = "Delete";
}

<div id="page-wrapper">
    <h3>Bạn muốn xóa thương hiệu này?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã thương hiệu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaThuongHieu)
            </dd>
            <dt>
                Tên thương hiệu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenThuongHieu)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index", "ThuongHieux", new { @class = "btn btn-primary" })
            </div>
        }
    </div>

</div>

