@model ThuNghiemLan7.Models.NhanVien

@{
    ViewBag.Title = "Delete";
}

<div id="page-wrapper">
    <h3>Bạn muốn xóa nhân viên này?</h3>
    <div>
        <h4>Nhân viên có mã: <strong>@Model.MaNhanVien</strong></h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ChucVu.TenChucVu)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ChucVu.TenChucVu)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TenDangNhap)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenDangNhap)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MatKhau)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TenNhanVien)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenNhanVien)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index", "NhanViens", new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>


